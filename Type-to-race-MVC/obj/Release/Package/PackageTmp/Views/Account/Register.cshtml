@model Type_to_race_MVC.Models.RegisterViewModel    

@if (ViewBag.error != null) {
    <div class="alert alert-danger">
        <p class="text-danger">@ViewBag.error</p>
    </div>
}

<!-- Normal Breadcrumb Begin -->
<section class="normal-breadcrumb set-bg" data-setbg="~/img/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Sign Up</h2>
                    <p>Welcome to the official Anime blog.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Normal Breadcrumb End -->
<!-- Signup Section Begin -->
<section class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Sign Up</h3>
                   @using (Html.BeginForm("Register","Account",FormMethod.Post,new { enctype="multipart/form-data"})) {
                       @Html.AntiForgeryToken();
                            @Html.ValidationMessageFor(m => m.Player_email, "", new { @class = "text-danger" })
                        <div class="input__item">
                            @Html.TextBoxFor(m => m.Player_email, new {  placeholder = "Email address" })
                            <span class="icon_mail"></span>
                        </div>
                            @Html.ValidationMessageFor(m => m.Player_name, "", new { @class = "text-danger" })
                        <div class="input__item">
                            @Html.TextBoxFor(m => m.Player_name, new {  placeholder = "Your Name" })
                            <span class="icon_profile"></span>
                        </div>
                            @Html.ValidationMessageFor(m => m.Player_password, "", new { @class = "text-danger" })
                        <div class="input__item">
                            @Html.TextBoxFor(m => m.Player_password, new { placeholder = "Password", type="password" })
                            <span class="icon_lock"></span>
                        </div>
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            <div class="input__item">
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Password", type = "password" })
                                <span class="icon_lock"></span>
                            </div>
                         <div class="input_item">
                             <input type="file" name="imageData" id="imageData" onchange="check();" placeholder="Upload Profile" />
                         </div>
                       
                            <button type="submit" class="site-btn">Sign up</button>
                            }
                            <h5>Already have an account? <a href="#">Log In!</a></h5>
                        </div>
            </div>
            <div class="col-lg-6">
                <div class="login__social__links">
                    <h3>Login With:</h3>
                    <ul>
                        <li>
                            <a href="#" class="facebook"><i class="fa fa-facebook"></i> Sign in With Facebook</a>
                        </li>
                        <li><a href="#" class="google"><i class="fa fa-google"></i> Sign in With Google</a></li>
                        <li><a href="#" class="twitter"><i class="fa fa-twitter"></i> Sign in With Twitter</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Signup Section End -->