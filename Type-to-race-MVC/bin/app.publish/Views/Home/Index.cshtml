@{ 
    Type_to_race_MVC.Models.TypetoRaceEntities db = new Type_to_race_MVC.Models.TypetoRaceEntities();
    Type_to_race_MVC.Models.player playerdetails = null;
    Type_to_race_MVC.Models.Top_3 score = null;
